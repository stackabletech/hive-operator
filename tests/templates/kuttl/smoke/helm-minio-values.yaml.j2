---
mode: standalone
replicas: 1
persistence:
  enabled: false

buckets:
  - name: hive
    policy: none

users:
  - accessKey: hive
    secretKey: hivehive
    policy: readwrite

service:
  type: NodePort

consoleService:
  type: NodePort

securityContext:
  enabled: false

resources:
  requests:
    memory: 1Gi
    cpu: "512m"
  limits:
    memory: "1Gi"
    cpu: "1"

makeBucketJob:
  securityContext:
    enabled: false
  resources:
    requests:
      memory: 128Mi
      cpu: "100m"
    limits:
      memory: "128Mi"
      cpu: "500m"

makeUserJob:
  securityContext:
    enabled: false
  resources:
    requests:
      memory: 128Mi
      cpu: "100m"
    limits:
      memory: "128Mi"
      cpu: "500m"

makePolicyJob:
  securityContext:
    enabled: false
  resources:
    requests:
      memory: 128Mi
      cpu: "100m"
    limits:
      memory: "128Mi"
      cpu: "500m"

makeCustomCommandJob:
  securityContext:
    enabled: false
  resources:
    requests:
      memory: 128Mi
      cpu: "100m"
    limits:
      memory: "128Mi"
      cpu: "500m"

makeServicesAccountJob:
  securityContext:
    enabled: false
  resources:
    requests:
      memory: 128Mi
      cpu: "100m"
    limits:
      memory: "128Mi"
      cpu: "500m"

{% if test_scenario['values']['s3-use-tls'] == 'true' %}
tls:
  enabled: true
  certSecret: minio-tls-certificates
  publicCrt: tls.crt
  privateKey: tls.key
{% endif %}
